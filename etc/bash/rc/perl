# ~/etc/bash/rc/perl
# -*- Mode: Bash; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 2 -*-
#
# working with perl

# location for personal modules not properly installed
export INSTALL_BASE="${HOME}/Library/Perl"
export PERL5LIB="${INSTALL_BASE}/lib/perl5:${HOME}/lib/perl"
export PERL_CPANM_OPT="--local-lib ${INSTALL_BASE}"

[ -x ${INSTALL_BASE}/bin ] && PATH="${INSTALL_BASE}/bin:${PATH}"

unixdate='print UnixDate( shift, "%s\n" );'

alias   stamp="perl -MDate::Manip -e '${unixdate}'"
alias   pmake='perl Makefile.PL ; make ; make test'
