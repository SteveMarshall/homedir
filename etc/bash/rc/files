# ~/etc/bash/rc/files
# -*- Mode: Bash; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 2 -*-
#
# useful output when working with files

alias   diff='diff -u'

alias    f.='find .'
alias   fgr='find . -not -iwholename '*.svn/*' -and -not -iwholename '*.git/*' | grep -i'
alias   fgx='find . -not -type d -and -not -iwholename '*.svn/*' -and -not -iwholename '*.git/*' -print0 | xargs -0 grep -i'

alias   ll='ls -la'
alias   ls='ls -F'

alias   mkdir='mkdir -p'

alias   rm='rm -i'
