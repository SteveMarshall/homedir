# ~/etc/bash/rc/less
# -*- Mode: Bash; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 2 -*-
#
# use less in preference to more

export  PAGER='less'
alias    more='less'


# add colour highlighting where possible
export LESSCOLORIZER='pygmentize'
export      LESSOPEN='| lesspipe.sh %s'
export          LESS='-R'
