# ~/etc/bash/rc/disk
# -*- Mode: Bash; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 2 -*-
# 
# readable output from disk utilities

export BLOCKSIZE='1k'

alias   df='df -h'
alias   du='du -h'

# current directory usage (sorted least-to-most) with total
alias   dus='\du -s * | sort -n ; du -s .'
