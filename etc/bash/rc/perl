# ~/etc/bash/rc/perl
# -*- Mode: Bash; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 2 -*-
#
# working with perl

# location for personal modules not properly installed
PERL_LOCAL_LIB="${HOME}/Library/Perl"
export PERL5LIB="${PERL_LOCAL_LIB}/lib/perl5:${HOME}/lib/perl"
export PERL_CPANM_OPT="--local-lib ${PERL_LOCAL_LIB}"

unixdate='print UnixDate( shift, "%s\n" );'

alias   stamp="perl -MDate::Manip -e '${unixdate}'"
alias      pm='perl Makefile.PL ; make ; make test'
